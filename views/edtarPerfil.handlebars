<main class="contenedor">
	<form class="default-form" action="/perfil/editar" method="POST" enctype="multipart/form-data">
		<div class="campo">
			<label>Nombre</label>
			<input type="text" name="nombre" placeholder="Tu nombre" value="{{usuario.nombre}}">
		</div>
		<div class="campo">
			<label>email</label>
			<input type="text" name="email" placeholder="Tu email" value="{{usuario.email}}">
		</div>
		<div class="campo">
			<label>Password</label>
			<input type="password" name="password" placeholder="Tu password">
		</div>
		<div class="campo">
			<label>Foto</label>
			<input type="file" name="imagen" placeholder="Tu foto de perfil">
		</div>
		<div class="campo">
			<input type="submit" value="Guardar" class="btn btn-azul">
		</div>
	</form>
</main>