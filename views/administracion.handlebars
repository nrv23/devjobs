<main class="lista-vacantes">
	<h2>NavegaciÃ³n</h2>
	<div class="botones separador">
		<a href="/perfil/editar" class="btn btn-azul">Editar Perfil</a>
		<a href="/vacantes/nueva" class="btn btn-verde">Nueva Vacante</a>
	</div>

	<h2>Lista de Vacantes</h2>
	{{#if vacantes.length}}
		{{#each vacantes}}
			<div class="vacante panel-administracion">
				<div class="caja">
					<h3>{{empresa}}</h3>
					<p class="puesto">{{puesto}}</p>
				</div>
				<div class="centrar-vertical caja">
					<a href="/candidatos/{{_id}}" class="btn btn-amarillo">Candidatos</a>	
				</div>
				<div class="centrar-vertical caja">
					<a href="/vacantes/editar/{{url}}" class="btn btn-verde">Editar</a>	
				</div>
				<div class="centrar-vertical caja">
					<a href="#" data-id={{_id}} class="btn btn-amarillo">Eliminar</a>	
				</div>
			</div>
		{{/each}}
	{{else}}
		<p> No hay Vacantes registradas</p>
	{{/if}}
</main>